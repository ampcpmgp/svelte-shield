{
  "name": "svelte-shield",
  "scripts": {
    "start": "run-s copy-dict dev",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "copy-dict": "cpy node_modules/kuromoji/dict/*.dat.gz public/dict/",
    "test": "ava",
    "test:watch": "npm run test -- --watch",
    "dist": "run-s copy-dict dist:*",
    "dist:clean": "rimraf dist",
    "dist:build": "vite build  --base=./",
    "lint": "eslint --ignore-path .gitignore **/*.{js,svelte}",
    "format": "prettier --ignore-path .gitignore --write **/*.{js,svelte}",
    "screenshot": "am-mocktimes--screenshot",
    "storybook": "start-storybook -p 6006 --no-dll",
    "build-storybook": "build-storybook --no-dll"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@rollup/plugin-yaml": "^3.0.0",
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-essentials": "^6.0.28",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/svelte": "^6.0.28",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.6",
    "am-mocktimes": "^4.0.3",
    "am-mocktimes-addon-screenshot": "^0.1.2",
    "am-parts-cli": "^0.3.0",
    "ava": "^3.12.1",
    "babel-loader": "^8.0.6",
    "clipboard-copy": "^3.1.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.14.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "esm": "^3.2.25",
    "less": "^3.11.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "prettier-plugin-svelte": "^2.2.0",
    "rimraf": "^3.0.1",
    "svelte": "^3.37.0",
    "svelte-loader": "^3.1.1",
    "vite": "^2.1.5"
  },
  "dependencies": {
    "@msgpack/msgpack": "^2.3.0",
    "bootstrap": "^4.5.2",
    "dayjs": "^1.9.6",
    "dexie": "^3.0.3",
    "ipfs": "^0.52.2",
    "ipfs-core": "^0.5.4",
    "is_js": "^0.9.0",
    "jquery": "^3.5.1",
    "kuromoji": "git+https://github.com/ampcpmgp/kuromoji.js.git#2083a3a25aa6d4cf7a0c1fa3d02163fc104d89b9",
    "modern-css-reset": "^1.1.0",
    "outdent": "^0.8.0",
    "popper.js": "^1.16.1",
    "svelte-select": "^3.14.1",
    "svelte-spa-router": "^2.0.0"
  },
  "browserslist": [
    "last 1 chrome versions"
  ],
  "ava": {
    "require": [
      "esm"
    ],
    "files": [
      "**/*.test.js"
    ]
  }
}
