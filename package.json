{
  "name": "svelte-shield",
  "scripts": {
    "dev": "run-s copy-dict dev:vite",
    "dev:vite": "vite",
    "dev-ext": "run-p dev-ext-background dev-ext-content",
    "dev-ext-background": "run-s copy-dict-ext dev-ext-background:vite",
    "dev-ext-background:vite": "vite build --config=vite-ext-background.config.js --watch",
    "dev-ext-content": "run-s copy-dict-ext build-ext-vite:background dev-ext-content:vite",
    "dev-ext-content:vite": "vite build --config=vite-ext-content.config.js --watch",
    "build": "run-s copy-dict build:*",
    "build:clean": "rimraf build",
    "build:vite": "vite build --base=./",
    "build-ext": "run-s copy-dict-ext build-ext-vite:background build-ext-vite:content",
    "build-ext-vite:background": "vite build --config=vite-ext-background.config.js",
    "build-ext-vite:content": "vite build --config=vite-ext-content.config.js",
    "serve": "vite preview",
    "copy-dict": "cpy node_modules/kuromoji/dict/*.dat.gz public/dict/",
    "copy-dict-ext": "cpy node_modules/kuromoji/dict/*.dat.gz chrome-extension/public/dict/",
    "test": "ava",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint --ignore-path .gitignore **/*.{js,svelte}",
    "format": "prettier --ignore-path .gitignore --write **/*.{js,svelte}",
    "screenshot": "am-mocktimes--screenshot",
    "storybook": "start-storybook -p 6006 --no-dll",
    "build-storybook": "build-storybook --no-dll"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@rollup/plugin-yaml": "^3.0.0",
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-essentials": "^6.0.28",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/svelte": "^6.0.28",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.6",
    "@types/chrome": "0.0.135",
    "am-mocktimes": "^4.0.4",
    "am-mocktimes-addon-screenshot": "^0.1.2",
    "am-parts-cli": "^0.3.0",
    "ava": "^3.12.1",
    "babel-loader": "^8.0.6",
    "clipboard-copy": "^3.1.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.14.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "esm": "^3.2.25",
    "less": "^3.11.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "rimraf": "^3.0.1",
    "svelte": "^3.37.0",
    "svelte-loader": "^3.1.1",
    "vite": "^2.2.1"
  },
  "dependencies": {
    "@msgpack/msgpack": "^2.3.0",
    "bootstrap": "^4.5.2",
    "dayjs": "^1.9.6",
    "dexie": "^3.0.3",
    "ipfs-core": "^0.5.4",
    "is_js": "^0.9.0",
    "jquery": "^3.5.1",
    "kuromoji": "^0.1.2",
    "kuromoji_no_compress": "github:ampcpmgp/kuromoji.js",
    "modern-css-reset": "^1.1.0",
    "outdent": "^0.8.0",
    "popper.js": "^1.16.1",
    "svelte-select": "^3.14.1",
    "svelte-spa-router": "^2.0.0"
  },
  "browserslist": [
    "last 1 chrome versions"
  ],
  "ava": {
    "require": [
      "esm"
    ],
    "files": [
      "**/*.test.js"
    ]
  }
}
